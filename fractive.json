{
    "title": "Stream of Pretentiousness",
    "author": "Nat Quayle Nelson",
    "description": "An open-source interactive nonfiction game written in SpaceFractive.",
    "website": "nqn.itch.io/stream-of-pretentiousness",
    "twitter": "",
    "markdown": [
        "source/**/*.md"
    ],
    "javascript": [
        "source/**/*.js"
    ],
    "assets": [
        "assets/**"
    ],
    "ignore": [],
    "aliases": [
        { "regex": "id:(?<id>[a-zA-Z0-9]+)", "replaceWith": "<p id=\"${id}\">", "end": "</p>"}
    ],
    "template": "template.html",
    "output": "build",
    "outputFormat": "prettify",
    "linkTooltips": false,
    "linkTags": {
        "external": {
            "html": "&nbsp;<i class=\"fa fa-external-link\" aria-hidden=\"true\"></i>",
            "prepend": false
        },
        "inline": {
            "html": "",
            "prepend": false
        },
        "section": {
            "html": "",
            "prepend": false
        },
        "function": {
            "html": "",
            "prepend": false
        }
    },
	"phaserArguments": {
		"width": 800,
		"height": 800,
		"transparent": true
	},
    "includeBackButton": true,
    "backButtonHtml": "Back",
    "hardLineBreaks": true,
    "smartPunctuation": true
}
